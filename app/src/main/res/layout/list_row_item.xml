<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/common_margin_20"
    android:layout_marginTop="@dimen/common_margin_20"
    android:layout_marginEnd="@dimen/common_margin_20"
    android:paddingBottom="@dimen/common_margin_20"
    android:background="@drawable/bg_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/common_margin_20"
        android:foreground="?android:attr/selectableItemBackground"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/first_name_tview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".45"
            android:gravity="start"
            android:maxLines="2"
            android:padding="@dimen/common_margin_10"
            android:text="First Name"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/first_name_value_tview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".55"
            android:gravity="end"
            android:maxLines="2"
            android:padding="@dimen/common_margin_10"
            android:text="Naveen"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>